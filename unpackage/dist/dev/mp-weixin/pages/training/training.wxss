.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFE5D9 0%, #D4E5FF 100%);
  padding: 20rpx;
}
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
}
.header .location {
  width: 60rpx;
}
.header .title {
  font-size: 32rpx;
  font-weight: bold;
}
.header .right-icons {
  display: flex;
  gap: 20rpx;
}
.training-stats {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.training-stats .stats-title {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.training-stats .stats-content {
  display: flex;
  justify-content: space-between;
}
.training-stats .stats-content .stat-item {
  text-align: center;
}
.training-stats .stats-content .stat-item .value {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}
.training-stats .stats-content .stat-item .label {
  font-size: 24rpx;
  color: #999;
}
.guide-row {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin: 0 0 30rpx;
}
.guide-row .guide-card {
  flex: 1;
  background: #FFFFFF;
  padding: 20rpx;
  border-radius: 20rpx;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(255, 123, 123, 0.2);
}
.guide-row .guide-card .title {
  font-size: 28rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}
.guide-row .guide-card .subtitle {
  font-size: 24rpx;
  color: #999;
}
.guide-row .guide-card .uni-icons {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
.guide-row .guide-card image {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  opacity: 0.8;
}
.training-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.training-grid .grid-item {
  background: #f8e7e5;
  border-radius: 20rpx;
  padding: 20rpx;
  text-align: center;
}
.training-grid .grid-item image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 10rpx;
}
.training-grid .grid-item .title {
  font-size: 28rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}
.training-grid .grid-item .status {
  font-size: 24rpx;
  color: #999;
}