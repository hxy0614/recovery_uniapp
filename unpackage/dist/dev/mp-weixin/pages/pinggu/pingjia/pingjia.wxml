<view class="container"><view class="section"><view class="section-title">基础信息</view><view class="form-item"><text class="required">*</text><text class="label">姓名</text><input type="text" placeholder="请输入姓名" value="{{a}}" bindinput="{{b}}"/></view><view class="form-item"><text class="required">*</text><text class="label">性别</text><picker bindchange="{{d}}" value="{{e}}" range="{{f}}"><view class="picker">{{c}}</view></picker></view><view class="form-item"><text class="required">*</text><text class="label">年龄</text><input type="number" placeholder="请输入年龄" value="{{g}}" bindinput="{{h}}"/></view><view class="form-item"><text class="label">证件类型</text><picker bindchange="{{j}}" value="{{k}}" range="{{l}}"><view class="picker">{{i}}</view></picker></view><view class="form-item"><text class="label">证件号码</text><input type="text" placeholder="请输入证件号码" value="{{m}}" bindinput="{{n}}"/></view><view class="form-item"><text class="label">出生日期</text><picker mode="date" bindchange="{{p}}" value="{{q}}"><view class="picker">{{o}}</view></picker></view><view class="form-item"><text class="label">身高(cm)</text><input type="number" placeholder="请输入身高" value="{{r}}" bindinput="{{s}}"/></view><view class="form-item"><text class="label">体重(kg)</text><input type="number" placeholder="请输入体重" value="{{t}}" bindinput="{{v}}"/></view></view><button class="submit-btn" bindtap="{{w}}">确认</button></view>