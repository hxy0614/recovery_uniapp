.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFE5D9 0%, #D4E5FF 100%);
  padding: 20rpx 20rpx 120rpx;
}
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 30rpx;
}
.header .title {
  font-size: 36rpx;
  font-weight: bold;
}
.header .right-icons {
  display: flex;
  gap: 20rpx;
}
.card-row {
  display: flex;
  gap: 20rpx;
  margin: 30rpx 0;
}
.card-row .card {
  flex: 1;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card-row .card .card-title {
  font-size: 28rpx;
  font-weight: bold;
}
.card-row .card .sub-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}
.training-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.training-card .training-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.training-card .training-header .training-title {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.training-card .start-btn {
  background: #FF6B6B;
  color: #FFFFFF;
  font-size: 20rpx;
  padding: 10rpx 30rpx;
  border-radius: 20rpx;
}
.training-card .training-stats {
  display: flex;
  justify-content: space-around;
  text-align: center;
}
.training-card .training-stats .stat-item .stat-value {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}
.training-card .training-stats .stat-item .stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.doctor-banner {
  margin: 30rpx 0;
  border-radius: 20rpx;
  overflow: hidden;
}
.doctor-banner .banner-swiper {
  height: 240rpx;
}
.doctor-banner .banner-item {
  position: relative;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx;
}
.doctor-banner .doctor-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.doctor-banner .banner-content {
  position: relative;
  z-index: 1;
  text-align: center;
}
.doctor-banner .banner-content .banner-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.doctor-banner .banner-content .banner-btn {
  display: inline-block;
  padding: 10rpx 30rpx;
  background: rgba(255, 107, 107, 0.1);
  border-radius: 30rpx;
  color: #FF6B6B;
  font-size: 24rpx;
}
.knowledge-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
}
.knowledge-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.knowledge-section .article-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
}
.knowledge-section .article-item:last-child {
  border-bottom: none;
}
.knowledge-section .article-item .article-info {
  flex: 1;
  padding-right: 20rpx;
}
.knowledge-section .article-item .article-title {
  font-size: 28rpx;
  line-height: 1.4;
}
.knowledge-section .article-item .article-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}
.knowledge-section .article-item .article-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 10rpx;
}
.icon-image {
  width: 40rpx;
  height: 40rpx;
}
.header .right-icons {
  display: flex;
  gap: 20rpx;
}
.header .right-icons .icon-image {
  width: 40rpx;
  height: 40rpx;
}
.card .icon-add .icon-image,
.card .qr-icon .icon-image {
  width: 40rpx;
  height: 40rpx;
}
.training-title {
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.training-title .icon-image {
  width: 40rpx;
  height: 40rpx;
}