.article-container {
  padding: 30rpx;
  background: #fff;
}
.article-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}
.article-text .paragraph {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
  margin-bottom: 20rpx;
}
.image-section {
  margin: 30rpx 0;
}
.image-section image {
  width: 100%;
  border-radius: 12rpx;
}
.image-section .image-caption {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 10rpx;
}
.training-steps {
  margin: 30rpx 0;
}
.training-steps .step-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}
.training-steps .step-item .step-number {
  width: 40rpx;
  height: 40rpx;
  background: #ff6b6b;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.training-steps .step-item .step-content {
  flex: 1;
}
.training-steps .step-item .step-content .step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.training-steps .step-item .step-content .step-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
.training-steps .training-image {
  margin: 20rpx 0;
}
.training-steps .training-image image {
  width: 100%;
  border-radius: 12rpx;
}
.tips-section {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 12rpx;
}
.tips-section .tips-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}
.tips-section .tips-list .tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  padding-left: 20rpx;
}