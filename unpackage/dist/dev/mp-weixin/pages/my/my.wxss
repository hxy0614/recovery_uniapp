.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFE5D9 0%, #D4E5FF 100%);
  padding: 20rpx;
}
.user-info {
  text-align: center;
  padding: 50rpx 0;
  position: relative;
}
.user-info .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 65rpx;
  margin-bottom: 20rpx;
}
.user-info .nickname {
  font-size: 32rpx;
  color: #333;
  padding: 0 100rpx;
}
.user-info .setting-icon {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.function-group {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.function-group .function-row {
  display: flex;
  justify-content: space-around;
}
.function-group .function-row .function-item {
  text-align: center;
  padding: 0 70rpx;
}
.function-group .function-row .function-item .icon-image {
  width: 100rpx;
  height: 64rpx;
  margin-bottom: 0rpx;
}
.function-group .function-row .function-item text {
  font-size: 24rpx;
  color: #666;
}
.settings-list {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 0 20rpx;
}
.settings-list .settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 35rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
}
.settings-list .settings-item:last-child {
  border-bottom: none;
}
.settings-list .settings-item .left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.settings-list .settings-item .left text {
  font-size: 28rpx;
  color: #333;
}
.settings-list .settings-item .icon-image {
  width: 48rpx;
  height: 48rpx;
}
.settings-list .settings-item .left .icon-image {
  margin-right: 20rpx;
}