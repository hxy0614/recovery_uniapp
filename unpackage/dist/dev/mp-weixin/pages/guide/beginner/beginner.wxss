.guide-container {
  min-height: 100vh;
  background: #FFF;
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
}
.tabs {
  display: flex;
  padding: 20rpx 30rpx;
  background: #FFF;
}
.tabs .tab-item {
  position: relative;
  padding: 20rpx 0;
  margin-right: 40rpx;
  font-size: 32rpx;
  color: #333;
  transition: all 0.3s ease;
}
.tabs .tab-item.active {
  color: #333;
  font-weight: bold;
}
.tabs .tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 40rpx;
  height: 6rpx;
  background: #ffcf7b;
  border-radius: 3rpx;
}
.tabs .tab-item .tab-line {
  width: 40rpx;
  height: 6rpx;
  background: #ffefd9;
  border-radius: 3rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  transition: all 0.3s ease;
}
.content {
  padding: 30rpx;
  flex: 1;
  position: relative;
}
.content .scroll-area {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 30rpx;
}
.content .section {
  margin-bottom: 40rpx;
  transition: opacity 0.3s ease;
}
.content .section.fade-enter-active, .content .section.fade-leave-active {
  transition: opacity 0.3s ease;
}
.content .section.fade-enter, .content .section.fade-leave-to {
  opacity: 0;
}
.content .section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}
.content .section .section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: #ffcf7b;
  border-radius: 3rpx;
}
.content .section .section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
.content .section .guide-image {
  width: 100%;
  margin: 20rpx 0;
  border-radius: 20rpx;
}
.content .section .instruction-card {
  background: #fffcf5;
  border-radius: 20rpx;
  padding: 20rpx;
}
.content .section .instruction-card .instruction-image {
  width: 100%;
}
.content .video-container {
  width: 100%;
  height: 400rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
}
.content .video-container .guide-video {
  width: 100%;
  height: 100%;
}
.content .instruction .main-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}
.content .instruction .step-item {
  margin-bottom: 30rpx;
}
.content .instruction .step-item .step-num {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.content .instruction .step-item .step-title {
  font-size: 30rpx;
  color: #ff875b;
  font-weight: bold;
}
.content .instruction .step-item .step-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-top: 10rpx;
}
.bottom-button {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #ff7b7b 0%, #ff875b 100%);
  color: #FFF;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 123, 156, 0.3);
  background-color: #FF7B9C;
  color: white;
  padding: 10rpx;
  border-radius: 5rpx;
  text-align: center;
  cursor: pointer;
}
.bottom-button:active {
  transform: scale(0.98);
}