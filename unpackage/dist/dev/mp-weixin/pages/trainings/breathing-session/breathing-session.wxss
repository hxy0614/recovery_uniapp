.container {
  min-height: 100vh;
  background: #FFFFFF;
  padding-bottom: 120rpx;
}
.header {
  display: flex;
  align-items: center;
  padding: 40px 20px 20px;
}
.header .back-btn {
  padding: 10rpx;
}
.header .back-btn .back-icon {
  font-size: 40rpx;
  color: #333;
}
.header .title {
  margin-left: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.training-info {
  padding: 30rpx;
}
.training-info .title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}
.training-info .tag {
  display: inline-block;
  font-size: 28rpx;
  color: #FF6B6B;
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
  background: rgba(255, 107, 107, 0.1);
}
.stats-row {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}
.stats-row .stat-card {
  flex: 1;
  background: #F8F8F8;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
}
.stats-row .stat-card .icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
}
.stats-row .stat-card .label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}
.stats-row .stat-card .value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.notice-section {
  padding: 30rpx;
}
.notice-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.notice-section .divider {
  height: 20rpx;
}
.notice-section .notice-list text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}
.notice-section .notice-warning {
  margin-top: 30rpx;
}
.notice-section .notice-warning text {
  font-size: 28rpx;
  color: #FF6B6B;
}
.bottom-btn {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  background: #FF6B6B;
  color: #FFFFFF;
  text-align: center;
  padding: 30rpx;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}