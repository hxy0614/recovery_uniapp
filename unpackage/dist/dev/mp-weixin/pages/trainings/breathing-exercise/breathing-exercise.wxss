.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFE5D9 0%, #D4E5FF 100%);
  padding-bottom: 120rpx;
  position: relative;
}
.header {
  display: flex;
  align-items: center;
  padding: 40px 20px 20px;
}
.header .back-btn {
  padding: 10rpx;
}
.header .back-btn .back-icon {
  font-size: 40rpx;
  color: #333;
}
.header .title {
  margin-left: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.toggle-btn {
  margin: 30rpx;
  display: inline-flex;
  align-items: center;
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 100rpx;
}
.toggle-btn text {
  font-size: 28rpx;
  color: #FF6B6B;
}
.toggle-btn .icon {
  margin-left: 10rpx;
}
.training-status {
  text-align: center;
  margin-top: 100rpx;
}
.training-status .status-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}
.countdown {
  text-align: center;
  margin-top: 160rpx;
}
.countdown .count-number {
  font-size: 200rpx;
  font-weight: bold;
  color: #FF6B6B;
}
.bottom-info {
  position: absolute;
  bottom: 200rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 0 40rpx;
}
.bottom-info .time-left, .bottom-info .sets-count {
  text-align: center;
}
.bottom-info .time-left .time, .bottom-info .time-left .count, .bottom-info .sets-count .time, .bottom-info .sets-count .count {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.bottom-info .time-left .label, .bottom-info .sets-count .label {
  font-size: 28rpx;
  color: #666;
}
.bottom-btn {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  background: #FF6B6B;
  color: #FFFFFF;
  text-align: center;
  padding: 30rpx;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}