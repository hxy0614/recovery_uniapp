.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFE5D9 0%, #D4E5FF 100%);
  padding: 0;
  position: relative;
}
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40px 20px 20px;
}
.header .back-btn {
  padding: 10rpx;
}
.header .back-btn .back-icon {
  font-size: 40rpx;
  color: #333;
}
.header .title {
  font-size: 36rpx;
  font-weight: bold;
}
.header .right-icons {
  width: 40rpx;
  height: 40rpx;
}
.course-title {
  padding: 30rpx;
  font-size: 48rpx;
  font-weight: bold;
}
.info-cards {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}
.info-cards .info-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  position: relative;
}
.info-cards .info-card .label {
  font-size: 28rpx;
  color: #666;
  display: block;
}
.info-cards .info-card .value {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 10rpx;
  display: block;
}
.info-cards .info-card .card-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  opacity: 0.6;
}
.training-sections {
  padding: 30rpx;
}
.training-sections .section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.training-sections .section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B6B;
  position: relative;
  padding-left: 20rpx;
}
.training-sections .section .section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: #FF6B6B;
  border-radius: 3rpx;
}
.training-sections .section .training-days {
  float: right;
  font-size: 28rpx;
  color: #999;
}
.training-sections .section .intro-content {
  margin-top: 20rpx;
}
.training-sections .section .intro-content .intro-text text {
  display: block;
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 10rpx;
  font-weight: bold;
}
.training-sections .section .period-content {
  margin-top: 20rpx;
}
.training-sections .section .period-content text {
  display: block;
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  font-weight: bold;
}
.training-sections .section .training-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-top: 20rpx;
  border: 2rpx solid #F0F0F0;
  border-radius: 16rpx;
}
.training-sections .section .training-item .training-info .item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.training-sections .section .training-item .training-info .item-duration {
  font-size: 28rpx;
  color: #999;
}
.training-sections .section .training-item .training-status {
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.training-sections .section .training-item .training-status .status-text {
  font-size: 28rpx;
  color: #999;
}
.training-sections .section .training-item .training-status .arrow-icon {
  font-size: 28rpx;
  color: #999;
}
.bottom-btn {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  background: #FF6B6B;
  color: #FFFFFF;
  text-align: center;
  padding: 30rpx;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}